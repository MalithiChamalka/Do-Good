<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@color/colorBlue"
    android:padding="1dp"
    android:layout_gravity="center" >

    <TextView
        android:id="@+id/popUpClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnChangeIcon"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:background="@drawable/txtfieldroundcorners"
                    android:textColor="@color/white"
                    android:text="CHANGE PROFILE PICTURE" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRemoveIcon"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:background="@drawable/txtfieldroundcorners"
                    android:textColor="@color/white"
                    android:text="REMOVE PROFILE PICTURE" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>